<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="innopolis.studentsapp">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        android:windowSoftInputMode="stateHidden">
        <activity
            android:name=".activities.RegistrationActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.LoginActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AdminPageActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.GroupsActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.StudentsActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.JournalActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.GroupPageActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.StudentPageActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.UserPageActivity"
            android:launchMode="singleTop" />
        <activity android:name=".activities.LessonPageActivity"></activity>
    </application>

</manifest>