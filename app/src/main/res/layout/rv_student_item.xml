<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewStudent">

    <RelativeLayout
        android:background="@color/colorRecyclerView"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="center"
            android:layout_marginEnd="15sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/rvStudentPhoto"
            android:layout_width="70dp"
            android:layout_height="100dp" />

        <TextView
            android:textSize="20sp"
            android:layout_toEndOf="@+id/rvStudentPhoto"
            android:layout_alignParentTop="true"
            android:id="@+id/rvTextStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="16sp"
            android:layout_below="@+id/rvTextStudentName"
            android:layout_toEndOf="@+id/rvStudentPhoto"
            android:id="@+id/rvTextStudentSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v7.widget.CardView>