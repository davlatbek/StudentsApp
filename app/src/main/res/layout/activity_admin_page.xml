<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="innopolis.studentsapp.activities.AdminPageActivity"
    android:padding="5sp">

    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textViewAdminName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome " />

    <Button
        android:textSize="16sp"
        android:id="@+id/buttonGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Groups" />

    <Button
        android:textSize="16sp"
        android:id="@+id/buttonStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Students" />

    <Button
        android:textSize="16sp"
        android:id="@+id/buttonJournals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Journals" />

    <Button
        android:textSize="16sp"
        android:id="@+id/buttonLessons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_lessons"/>
</LinearLayout>
